{

    "window.titleBarStyle": "custom",
    "window.zoomLevel": -1,

    "explorer.confirmDragAndDrop": false,

    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,

    "editor.fontSize": 13,    
    "editor.renderWhitespace": "all",
    "editor.accessibilitySupport": "off",
    "editor.insertSpaces": true,

    "files.encoding": "utf8",
    // Configure glob patterns for excluding files and folders.
    // "files.exclude": {
    //     "**/.git": true,
    //     "**/.svn": true,
    //     "**/.hg": true,
    //     "**/.venv": true,
    //     "**/.DS_Store": true,
    //     "**/*/__pycache__": true
    // },
    
    "python.linting.enabled": true,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pycodestyleArgs": [
        "--max-line-length", 
        "120",
    ],
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{ based_on_style: google, column_limit: 120, indent_blank_lines: false }",
    ],

    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": true,

    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss",
        "**/*.py"
      ],

      "todohighlight.exclude": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**",

        "**/output/**",
        "**/data/**",
        "**/.git/**"
      ],

      "todohighlight.keywords": ["XXX", "XXX:", "TODO"],

      "TodoParser": {
        "include": ["py"],
        "folderExclude": [".git", ".vscode", "data", "output"],
        "showInProblems": true,
        "markers": ["NOTE:", "REMINDER:", "TODO", "XXX", "XXX:"],
        "autoDefaultMarkers": true
    },
    
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "sync.gist": "3a45f2b5fd4cd60b3a30754634e5b706",
    "sync.autoUpload": false,
    "files.autoSave": "off",
    "editor.find.autoFindInSelection": true,
    "workbench.enableExperiments": false,
    "workbench.colorTheme": "Monokai",
    "editor.minimap.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "python.linting.flake8Enabled": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
}
